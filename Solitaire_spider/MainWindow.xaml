<Window x:Class="Solitaire_spider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Solitaire_spider"
        mc:Ignorable="d"
        Title="Solitare" Height="800" Width="1500"
        MinHeight="800" MinWidth="1400"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        >
    <Canvas x:Name="CanvasMainWindow" Width="auto" Height="auto" 
            PreviewMouseMove="CanvasMainWindow_PreviewMouseMove"
            PreviewMouseUp="CanvasMainWindow_PreviewMouseUp">
        <Canvas.Background>
            <ImageBrush  Stretch="UniformToFill"/>
        </Canvas.Background>
        <Label x:Name="Timer"   FontSize="20"  Canvas.Bottom="20" Canvas.Right="200" Loaded="Timer_Loaded"/>
        <Label x:Name="Points" Content="500"  Canvas.Bottom="20" Canvas.Right="400" FontSize="20" />
        <Label Content="Wynik" FontSize="20" Canvas.Bottom="20" Canvas.Right="475"/>
    </Canvas>
</Window>
